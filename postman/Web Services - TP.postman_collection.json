				{
					"name": "Create Post",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"pm.variables.replaceIn('{{$randomLoremParagraph}}')"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();",
									"",
									"pm.collectionVariables.set('created-post-id', response.id)",
									"",
									"pm.test(\"Statut 201 créé\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Réponse est en JSON\", function () {",
									"    pm.response.to.be.withBody;",
									"    pm.response.to.be.json;",
									"});",
									"",
									"pm.test(\"L'objet post contient un id\", function () {",
									"    const data = pm.response.json();",
									"    pm.expect(data).to.have.property(\"id\");",
									"});",
									"",
									"pm.test(\"Contenu du post n'est pas vide\", function () {",
									"    const data = pm.response.json();",
									"    pm.expect(data).to.have.property(\"content\").that.is.a(\"string\").and.is.not.empty;",
									"});",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"content\": \"{{$randomLoremParagraph}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{url}}/posts",
							"host": [
								"{{url}}"
							],
							"path": [
								"posts"
							]
						}
					},
					"response": []
				},
				{
					"name": "List Posts",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const pageParam = pm.request.url.query.find((param) => param.key === 'page')",
									"",
									"if (pageParam === undefined || pageParam?.value === \"1\" || pageParam.disabled === true) {",
									"    pm.collectionVariables.set('post-infinit-scroll-timestamp', '')",
									"    pm.request.url.query.remove('beforeTs')",
									"}"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"const pageParam = pm.request.url.query.find((param) => param.key === 'page')",
									"",
									"if (pageParam === undefined || pageParam?.value === \"1\" || pageParam.disabled === 'true') {",
									"    pm.collectionVariables.set('post-infinit-scroll-timestamp', Math.floor(new Date().getTime() / 1000))",
									"}",
									"",
									"pm.test(\"Statut 200 OK\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"La réponse est un tableau de posts\", function () {",
									"    const posts = pm.response.json();",
									"    pm.expect(posts).to.be.an(\"array\");",
									"    if (posts.length > 0) {",
									"        pm.expect(posts[0]).to.have.property(\"id\");",
									"        pm.expect(posts[0]).to.have.property(\"author\");",
									"        pm.expect(posts[0]).to.have.property(\"content\");",
									"        pm.expect(posts[0]).to.have.property(\"createdAt\");",
									"        pm.expect(posts[0]).to.have.property(\"likesCount\");",
									"    }",
									"});",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{url}}/posts?page=1&limit=2&beforeTs={{post-infinit-scroll-timestamp}}",
							"host": [
								"{{url}}"
							],
							"path": [
								"posts"
							],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "2"
								},
								{
									"key": "beforeTs",
									"value": "{{post-infinit-scroll-timestamp}}"
								}
							]
						}
					},
					"response": []
				},
